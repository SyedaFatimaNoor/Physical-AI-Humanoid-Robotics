{
    "version": 2,
    "builds": [
        {
            "src": "rag-backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "textbook-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/rag-backend/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/textbook-frontend/$1"
        }
    ]
}